'================================================
'Botones cuadros
'================================================
Sub btnSiguiente()
    Dim wb As Workbook
    Dim WS As Worksheet
    Dim siguiente As Worksheet
    
    Set wb = ThisWorkbook
    Set WS = wb.ActiveSheet
    Set siguiente = WS.Next
    
    If Not siguiente Is Nothing Then
        siguiente.Activate
    End If
End Sub

Sub btnAnterior()
    Dim wb As Workbook
    Dim WS As Worksheet
    Dim Anterior As Worksheet
    
    Set wb = ThisWorkbook
    Set WS = wb.ActiveSheet
    Set Anterior = WS.Previous
    
    If Not Anterior Is Nothing Then
        Anterior.Activate
    End If
End Sub

